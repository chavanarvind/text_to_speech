erp, tru = format_raw_material_id(erp, tru)
erp = erp.dropna(subset=['key_erp', 'PLNT_CD', 'SRC_SYS_CD'])
# DEBUG: Check if ERP_PART_ID exists in raw ERP data
erp['ERP_PART_ID'] = erp['ERP_PART_ID'].astype(str).str.strip()
erp_id_to_check = "000000000000528926"
erp_id_unpadded = "528926"

found_padded = erp['ERP_PART_ID'].isin([erp_id_to_check]).any()
found_unpadded = erp['ERP_PART_ID'].isin([erp_id_unpadded]).any()

print("="*60)
print("üîç ERP_PART_ID Presence Check")
if found_padded:
    print(f"‚úÖ Found ERP_PART_ID {erp_id_to_check} in ERP data")
else:
    print(f"‚ùå DID NOT find ERP_PART_ID {erp_id_to_check} in ERP data")

if found_unpadded:
    print(f"‚úÖ Found ERP_PART_ID {erp_id_unpadded} in ERP data")
else:
    print(f"‚ùå DID NOT find ERP_PART_ID {erp_id_unpadded} in ERP data")
print("="*60)
