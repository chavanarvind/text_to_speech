erp_part_to_check = "528926"
tru_spec_to_check = "PC-0014319"

print("=" * 60)
print(f"üîç DEBUG: Checking specific pair ({erp_part_to_check}, {tru_spec_to_check}) in round: {round_name}")

# Clean IDs
reference_table['ERP_PART_ID'] = reference_table['ERP_PART_ID'].astype(str).str.strip()
reference_table['TRU_SPEC_ID'] = reference_table['TRU_SPEC_ID'].astype(str).str.strip()
erp['ERP_PART_ID'] = erp['ERP_PART_ID'].astype(str).str.strip()
tru['TRU_SPEC_ID'] = tru['TRU_SPEC_ID'].astype(str).str.strip()

# ‚úÖ Check if pair exists in reference table
pair_in_ref = reference_table[
    (reference_table['ERP_PART_ID'] == erp_part_to_check) &
    (reference_table['TRU_SPEC_ID'] == tru_spec_to_check)
]
if not pair_in_ref.empty:
    print(f"‚úÖ Found pair ({erp_part_to_check}, {tru_spec_to_check}) in reference table")
else:
    print(f"‚ùå Pair ({erp_part_to_check}, {tru_spec_to_check}) NOT found in reference table")

# ‚úÖ Check if ERP_PART_ID exists in ERP
erp_row = erp[erp['ERP_PART_ID'] == erp_part_to_check]
if not erp_row.empty:
    print(f"‚úÖ ERP_PART_ID {erp_part_to_check} found in ERP")
else:
    print(f"‚ùå ERP_PART_ID {erp_part_to_check} NOT found in ERP")

# ‚úÖ Check if TRU_SPEC_ID exists in TRU
tru_row = tru[tru['TRU_SPEC_ID'] == tru_spec_to_check]
if not tru_row.empty:
    print(f"‚úÖ TRU_SPEC_ID {tru_spec_to_check} found in TRU")
else:
    print(f"‚ùå TRU_SPEC_ID {tru_spec_to_check} NOT found in TRU")
