forced_matches = erp[ERP_MATCH_COLS].merge(
    forced_pairs, on=ERP_PART_ID, how='inner'
).merge(
    tru[TRU_MATCH_COLS],
    on=[TRU_SPEC_ID],
    how='inner'
)


# Include plant/system info while joining
forced_matches = erp[ERP_MATCH_COLS].merge(
    forced_pairs, on=ERP_PART_ID, how='inner'
).merge(
    tru[TRU_MATCH_COLS],
    left_on=['SRC_SYS_CD', 'PLNT_CD', TRU_SPEC_ID],
    right_on=['SRC_SYS_CD', 'PLNT_CD', TRU_SPEC_ID],
    how='inner'
)
