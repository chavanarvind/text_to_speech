# ğŸŸ£ Pre-merge debug for target record
target_cmpnt = '30055433'
target_child = 'PC-008694'

print("\n=== DEBUG: Pre-merge diagnostics for CMPNT_MATL_NUM:", target_cmpnt, "and CHILD_NM:", target_child, "===")

print("\nâœ… ERP DEBUG:")
erp_debug = erp.query(f"CMPNT_MATL_NUM == '{target_cmpnt}'")
print(erp_debug)

print("\nâœ… REF TABLE DEBUG:")
ref_debug = reference_table.query(f"CMPNT_MATL_NUM == '{target_cmpnt}' and CHILD_NM == '{target_child}'")
print(ref_debug)

print("\nâœ… TRU DEBUG:")
tru_debug = tru.query(f"CHILD_NM == '{target_child}'")
print(tru_debug)

# ğŸ”„ Original merge (ERP + REF)
df_erp_with_additional_id = erp[ERP_MATCH_COLS].merge(
    reference_table[[ERP_PART_ID, TRU_SPEC_ID]].drop_duplicates(),
    on=ERP_PART_ID,
    how='inner'
)

# ğŸŸ£ Debug after creating df_erp_with_additional_id
print("\n=== DEBUG: Post-ERP+REF merge ===")
merged_debug = df_erp_with_additional_id.query(f"CMPNT_MATL_NUM == '{target_cmpnt}'")
print(merged_debug)

# ğŸŸ£ Check system and plant codes
print("\nğŸ” SRC_SYS_CD in ERP:", erp_debug['SRC_SYS_CD'].unique())
print("ğŸ” SRC_SYS_CD in TRU:", tru_debug['SRC_SYS_CD'].unique())

print("\nğŸ” PLNT_CD in ERP:", erp_debug['PLNT_CD'].unique())
print("ğŸ” PLNT_CD in TRU:", tru_debug['PLNT_CD'].unique())

# ğŸŸ£ Compare IDs
print("\nğŸ” ERP_MAT_NUM values:", erp_debug['CMPNT_MATL_NUM'].unique())
print("ğŸ” TRU_SPEC_ID values:", tru_debug[TRU_SPEC_ID].unique())

# ğŸŸ£ Normalize and compare IDs
erp_ids = set(erp_debug['CMPNT_MATL_NUM'].astype(str).str.strip())
tru_ids = set(tru_debug[TRU_SPEC_ID].astype(str).str.strip())
print("\nğŸŸ£ Normalized ERP IDs:", erp_ids)
print("ğŸŸ£ Normalized TRU IDs:", tru_ids)
print("âœ… Overlap between ERP and TRU:", erp_ids.intersection(tru_ids))

# ğŸŸ£ Debug after strict merge with TRU
matched_per_id = df_erp_with_additional_id.merge(
    tru[TRU_MATCH_COLS],
    left_on=['SRC_SYS_CD', 'PLNT_CD', ERP_MAT_NUM, TRU_SPEC_ID],
    right_on=['SRC_SYS_CD', 'PLNT_CD', TRU_MAT_NUM, TRU_SPEC_ID],
    how='inner'
)

print("\n=== DEBUG: Post-strict merge with TRU ===")
post_merge_debug = matched_per_id.query(f"CMPNT_MATL_NUM == '{target_cmpnt}'")
print(post_merge_debug if not post_merge_debug.empty else "âŒ Target record not found after strict merge")
