# üëÄ Check if ERP row exists
erp_row = erp[erp[ERP_PART_ID].str.lstrip("0") == "528926"]
print("‚úÖ ERP row found?" if not erp_row.empty else "‚ùå ERP row not found")

# üëÄ Check if TRU row exists
tru_row = tru[tru[TRU_SPEC_ID] == "PC-0014319"]
print("‚úÖ TRU row found?" if not tru_row.empty else "‚ùå TRU row not found")

# üìù Forced pair DataFrame
forced_pair_df = pd.DataFrame({
    ERP_PART_ID: ["528926"],
    TRU_SPEC_ID: ["PC-0014319"]
})

# üö® Run forced pair join logic directly
forced_matches = erp[ERP_MATCH_COLS].merge(
    forced_pair_df, on=ERP_PART_ID, how='inner'
).merge(
    tru[TRU_MATCH_COLS],
    left_on=['SRC_SYS_CD', 'PLNT_CD', TRU_SPEC_ID],
    right_on=['SRC_SYS_CD', 'PLNT_CD', TRU_SPEC_ID],
    how='inner'
)

if not forced_matches.empty:
    print("üéØ Forced Match FOUND")
    forced_matches['Matching Reason'] = "QC Forced Pair (forced pair)"
    forced_matches['confidence'] = "high"
    print(forced_matches[[ERP_PART_ID, TRU_SPEC_ID, 'Matching Reason', 'confidence']])
else:
    print("‚ö†Ô∏è Forced Match NOT found in ERP/TRU (will be marked unmatched)")
