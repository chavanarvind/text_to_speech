check_duplicates(matches_NLP_list_ERP)
print(matches_NLP_list_ERP)

# âœ… Save NLP_list_ERP matches to user_logs folder
import os

# Get the log folder path
log_folder = os.path.join(os.getcwd(), "user_logs")
os.makedirs(log_folder, exist_ok=True)

# Save CSV
nlp_list_matches_path = os.path.join(log_folder, "matches_NLP_list_ERP.csv")
matches_NLP_list_ERP.to_csv(nlp_list_matches_path, index=False)

print(f"Saved NLP_list_ERP matches to: {nlp_list_matches_path}")
