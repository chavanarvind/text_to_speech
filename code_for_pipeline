# Combine and save
if sampled_records:
    final_sampled_df = pd.concat(sampled_records, ignore_index=True)
    final_sampled_df.to_parquet(os.path.join(output_path, 'sampled_null_final_category.parquet'), index=False)
    print(f"✅ Parquet file saved at: {output_path}/sampled_null_final_category.parquet")
else:
    print("⚠️ No matching records found in any file.")
