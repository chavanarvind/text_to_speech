start_time = time.time()
duration = None
try:
    # your main processing logic here...
    duration = time.time() - start_time
except Exception as e:
    print(f"[❌ ERROR] File: {file_path}\n{e}")
    traceback.print_exc()
finally:
    if duration is not None:
        print(f"[✅] Finished processing: {basename} in {duration:.2f} seconds")
    else:
        print(f"[⚠️] Skipped duration log for {basename} due to earlier error.")
