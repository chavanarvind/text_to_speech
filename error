import os
import argparse
from azureml.core import Run, Dataset

def main(output_path):
    run = Run.get_context()
    ws = run.experiment.workspace

    dataset = Dataset.get_by_name(ws, name='harmonized_bom_data_asset')

    # List all file paths in the dataset
    file_paths = dataset.to_path()

    # Take only the first 2 files
    selected_files = file_paths[:2]

    # Create a dataset with only those 2 files
    mini_dataset = Dataset.File.from_files(path=selected_files)

    # Download only the selected files
    os.makedirs(output_path, exist_ok=True)
    mini_dataset.download(target_path=output_path, overwrite=True)

    print(f"âœ… Downloaded 2 files to: {output_path}")

if __name__ == "__main__":
    parser = argparse.ArgumentParser()
    parser.add_argument("--output_path", type=str, required=True)
    args = parser.parse_args()

    main(args.output_path)
