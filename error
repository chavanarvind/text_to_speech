import os
import glob

# Paths
embedding_dir = './data/validation_step/model_artifects/bert_embedding'
sampled_dir = './data/validation_step/model_artifects/sampled_rows'
output_dir = './data/validation_step/model_artifects'

# File patterns to clean
patterns = [
    os.path.join(embedding_dir, '*.npy'),
    os.path.join(sampled_dir, '*.parquet'),
    os.path.join(output_dir, 'X_full.npy'),
    os.path.join(output_dir, 'y_full.npy'),
    os.path.join(output_dir, 'final_model.joblib'),
    os.path.join(output_dir, 'ordinal_encoder.pkl'),
    os.path.join(output_dir, 'scaler.pkl'),
    os.path.join(output_dir, 'prediction_scores.csv'),
]

# Deletion
for pattern in patterns:
    for file in glob.glob(pattern):
        try:
            os.remove(file)
            print(f"üóëÔ∏è Removed: {file}")
        except Exception as e:
            print(f"‚ùå Failed to remove {file}: {e}")
