import os

def load_data(input_path, mapping_csv_dir):
    df = pd.read_parquet(input_path)

    # Locate the first CSV file in the mapping folder
    csv_files = [f for f in os.listdir(mapping_csv_dir) if f.endswith(".csv")]
    assert csv_files, f"No CSV files found in {mapping_csv_dir}"
    csv_path = os.path.join(mapping_csv_dir, csv_files[0])

    mapping_df = pd.read_csv(csv_path)
    return df, mapping_df
