from azureml.core import Dataset

# Upload file as before
files = ['./local_data/high_conf_direct_mapping.csv']
default_ds.upload_files(files=files, target_path='inputs', overwrite=True)

# Register or create file dataset
high_conf_dataset = Dataset.File.from_files(path=(default_ds, 'inputs/high_conf_direct_mapping.csv'))


high_conf_merge_step = PythonScriptStep(
    name="Step 1a - High Confidence Merge",
    script_name="step_1a_extract_and_merge.py",
    source_directory="scripts",
    inputs=[data_step1_out, high_conf_dataset.as_named_input('high_conf_map').as_mount()],  # ✅
    arguments=[
        "--input_path", data_step1_out,
        "--mapping_csv", 'high_conf_map',  # ✅ Use mount point name
        "--mapped_output", data_step1a_mapped,
        "--unmapped_output", data_step1a_unmapped
    ],
    outputs=[data_step1a_mapped, data_step1a_unmapped],
    runconfig=run_config,
    compute_target=compute_name,
    allow_reuse=False
)
