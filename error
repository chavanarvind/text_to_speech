from azureml.core import Workspace, Model

# Connect to dev workspace
dev_ws = Workspace.from_config(path="dev_config.json")  # path to dev workspace config
model = Model(dev_ws, name="your_model_name")

# Download the model locally
model.download(target_dir="./model_artifact", exist_ok=True)

from azureml.core import Workspace, Model

# Connect to prod workspace
prod_ws = Workspace.from_config(path="prod_config.json")

# Register model in prod
model = Model.register(
    workspace=prod_ws,
    model_path="./model_artifact",  # directory or specific file
    model_name="your_model_name",
    description="Model promoted from dev to prod"
)
