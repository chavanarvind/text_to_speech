 Save BEFORE Off-Spec Classification
user_logs_path = os.path.join(os.getcwd(), "user_logs")
os.makedirs(user_logs_path, exist_ok=True)

erp_before_offspec_path = os.path.join(user_logs_path, "erp_before_offspec.csv")
tru_before_offspec_path = os.path.join(user_logs_path, "tru_before_offspec.csv")

erp[[ERP_PART_ID, ERP_PART_DESC]].to_csv(erp_before_offspec_path, index=False)
tru[[TRU_SPEC_ID, TRU_SPEC_DESC]].to_csv(tru_before_offspec_path, index=False)
 Save BEFORE Off-Spec Classification
erp_after_path = os.path.join(user_logs_path, "erp_after_offspec.csv")
tru_after_path = os.path.join(user_logs_path, "tru_after_offspec.csv")
tru_no_common_path = os.path.join(user_logs_path, "tru_no_common_after_offspec.csv")

erp.to_csv(erp_after_path, index=False)
tru.to_csv(tru_after_path, index=False)
tru_no_common.to_csv(tru_no_common_path, index=False)

Save Discarded ERP and TRU
erp_discarded.to_csv(os.path.join(user_logs_path, "erp_discarded_offspec.csv"), index=False)
tru_discarded.to_csv(os.path.join(user_logs_path, "tru_discarded_offspec.csv"), index=False)
tru_off_specs_no_common.to_csv(os.path.join(user_logs_path, "tru_offspecs_no_common.csv"), index=False)
